<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-ticket<% } else { %>add-ticket<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Customer name</label>
                <input type="text" name="customer_name" id="customer_name" value="<% if (editing) { %><%= ticket.customer_name %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Performance Title</label>
                <input type="text" name="performance_title" id="performance_title" value="<% if (editing) { %><%= ticket.performance_title %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="ticket_price" id="ticket_price" step="0.01" value="<% if (editing) { %><%= ticket.ticket_price %><% } %>">
            </div>
            <div class="form-control">
                <label for="time">Performance Time</label>
                <input type="number" name="performance_time" id="performance_time" value="<% if (editing) { %><%= ticket.performance_time %><% } %>">
            </div>
            <input type="hidden" value="bearer abc123" name="header">
            <% if (editing) { %>
                <input type="hidden" value="<%= ticket._id %>" name="ticketId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Ticket<% } else { %>Add Ticket<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>